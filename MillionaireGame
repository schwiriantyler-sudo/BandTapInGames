<script>
/* ========= Utilities ========= */
const $ = s => document.querySelector(s);
const shuffleInPlace = arr => { for(let i=arr.length-1;i>0;i--){const j=Math.floor(Math.random()*(i+1)); [arr[i],arr[j]]=[arr[j],arr[i]];} return arr; };
const sleep = ms => new Promise(r=>setTimeout(r,ms));

/* ========= Money Ladder ========= */
const DEFAULT_LADDER = [
  100, 200, 300, 500, 1000, // 5 (safe)
  2000, 4000, 8000, 16000, 32000, // 10 (safe)
  64000, 125000, 250000, 500000, 1000000
];
const SAFE_STEPS = [5, 10]; // after answering these, guaranteed minimum

/* ========= State ========= */
let questions = []; // ordered by difficulty
let qIndex = 0, correct = 0, wrong = 0, currentMap = null;
let results = [];
let used5050=false, usedPoll=false, usedPhone=false, usedSkip=false;

/* ========= Elements ========= */
const moneyEl = $('#moneyText'), qEl = $('#questionText'), hintEl = $('#hintText');
const statusEl = $('#status'), statsEl = $('#stats'), qNumEl = $('#qNum'), correctEl = $('#correct'), wrongEl = $('#wrong');
const editor = $('#editor'), ladderEl = $('#ladder'), pollBox = $('#pollBox');
const bars = { A:$('#barA'), B:$('#barB'), C:$('#barC'), D:$('#barD') };
const pcts = { A:$('#pctA'), B:$('#pctB'), C:$('#pctC'), D:$('#pctD') };

const opts = {
  A: $('#optA'), B: $('#optB'), C: $('#optC'), D: $('#optD')
};

/* ========= CSV Parser (prompts may include commas) ========= */
function parseCSV(text){
  return text
    .split(/\r?\n/)
    .map(l => l.trim())
    .filter(Boolean)
    .map((line, idx) => {
      // We need to split into at least 6 fields; last fields are: correct, prize?, hint?
      // Strategy: split by commas, but allow commas in prompt by rebuilding from the front.
      const parts = line.split(',');
      if(parts.length < 6) throw new Error(`Line ${idx+1}: need at least 6 fields`);
      // last = hint (optional), second last = prize (optional), third last = correct
      const correctRaw = parts[parts.length-3].trim();
      const prizeRaw = (parts.length>=7) ? parts[parts.length-2].trim() : '';
      const hintRaw  = (parts.length>=8) ? parts[parts.length-1].trim() : '';

      // The remaining first (parts.length-3) fields form: prompt, A, B, C, D (5 fields)
      const head = parts.slice(0, parts.length-3).map(s=>s.trim());
      if(head.length < 5) throw new Error(`Line ${idx+1}: need prompt,A,B,C,D before correct letter`);
      const [prompt, A, B, C, D] = head;

      const correct = (correctRaw || '').toUpperCase()[0];
      if(!['A','B','C','D'].includes(correct)) throw new Error(`Line ${idx+1}: correct must be A/B/C/D`);

      const prize = prizeRaw ? Number(prizeRaw) : null;
      const hint  = hintRaw || '';

      return { prompt, A, B, C, D, correct, prize, hint };
    });
}

/* ========= Ladder Rendering ========= */
function renderLadder(activeIndex){
  ladderEl.innerHTML = '';
  for(let i=DEFAULT_LADDER.length-1; i>=0; i--){
    const step = document.createElement('div');
    step.className = 'step' + (SAFE_STEPS.includes(i+1)?' safe':'') + ((i===activeIndex)?' active':'');
    const n = i+1;
    step.innerHTML = `<div>#${n.toString().padStart(2,'0')}</div><div class="prize">$${DEFAULT_LADDER[i].toLocaleString()}</div>`;
    ladderEl.appendChild(step);
  }
}

/* ========= Game Control ========= */
function restart(){
  qIndex = 0; correct = 0; wrong = 0; results = [];
  used5050=usedPoll=usedPhone=usedSkip=false;
  $('#ll5050').classList.remove('used');
  $('#llPoll').classList.remove('used');
  $('#llPhone').classList.remove('used');
  $('#llSkip').classList.remove('used');
  pollBox.style.display='none';
  renderLadder(qIndex);
  renderQuestion();
}

function setQuestions(qs){
  // Expect qs already ordered by increasing difficulty (top to bottom)
  questions = qs.slice(0, DEFAULT_LADDER.length);
  // If fewer than 15 provided, pad with easy fillers to avoid crashes
  while(questions.length < DEFAULT_LADDER.length){
    questions.push({
      prompt:'Freebie: Which is a brass instrument?',
      A:'Trumpet', B:'Broccoli', C:'iPad', D:'Fish',
      correct:'A', prize:null, hint:'If you can eat it, itâ€™s probably not brass.'
    });
  }
  restart();
}

/* ===== Randomize option labels per question & map back to A-D ===== */
function buildOptionMap(q){
  const entries = [
    ['A', q.A], ['B', q.B], ['C', q.C], ['D', q.D]
  ];
  shuffleInPlace(entries);
  const map = {
    // visible buttons order -> original letter
    order: [ entries[0][0], entries[1][0], entries[2][0], entries[3][0] ],
    labels: [ entries[0][1], entries[1][1], entries[2][1], entries[3][1] ],
    correctVisibleIndex: null
  };
  for(let i=0;i<4;i++){
    if(map.order[i] === q.correct) map.correctVisibleIndex = i;
  }
  return map;
}

function renderQuestion(){
  const q = questions[qIndex];
  if(!q){ endGame(); return; }

  // Prize display
  const prize = (q.prize ?? DEFAULT_LADDER[qIndex]);
  moneyEl.textContent = `Prize: $${Number(prize).toLocaleString()}`;

  qEl.textContent = q.prompt;
  hintEl.textContent = 'Tip: Use lifelines if you need help.';
  statusEl.textContent = 'Choose your answer.';
  qNumEl.textContent = (qIndex+1).toString();
  correctEl.textContent = String(correct);
  wrongEl.textContent   = String(wrong);

  // Randomize options each time
  currentMap = buildOptionMap(q);
  const labels = ['A','B','C','D'];
  const btns = [opts.A, opts.B, opts.C, opts.D];
  btns.forEach((btn, i) => {
    btn.disabled = false;
    btn.classList.remove('correct','incorrect');
    btn.querySelector('.label').textContent = currentMap.labels[i];
    btn.querySelector('.tag').textContent   = labels[i];
    btn.style.visibility = 'visible';
  });

  // Refresh ladder highlight
  renderLadder(qIndex);
  // Hide audience poll (if open)
  pollBox.style.display = 'none';
}

/* ========= Answer Handling ========= */
async function pick(index){
  const q = questions[qIndex];
  if(!q || !currentMap) return;

  // lock buttons
  [opts.A,opts.B,opts.C,opts.D].forEach(b=>b.disabled=true);

  const isCorrect = (index === currentMap.correctVisibleIndex);
  const btns = [opts.A,opts.B,opts.C,opts.D];

  btns[index].classList.add(isCorrect?'correct':'incorrect');
  if(!isCorrect){
    // highlight the correct one, too
    btns[currentMap.correctVisibleIndex].classList.add('correct');
  }

  const pickedLetter = ['A','B','C','D'][index];
  const visibleToOrig = currentMap.order[index]; // A/B/C/D original
  const correctOrig   = currentMap.order[currentMap.correctVisibleIndex];

  const prize = (q.prize ?? DEFAULT_LADDER[qIndex]);
  const earned = isCorrect ? prize : getSafePrize();

  // Log result
  results.push({
    n:qIndex+1,
    prompt:q.prompt,
    visible_labels: {
      A: opts.A.querySelector('.label').textContent,
      B: opts.B.querySelector('.label').textContent,
      C: opts.C.querySelector('.label').textContent,
      D: opts.D.querySelector('.label').textContent,
    },
    mapping_order: currentMap.order.join(''),
    correct_original: q.correct,
    picked_visible: pickedLetter,
    picked_original: visibleToOrig,
    isRight: isCorrect ? 'TRUE' : 'FALSE',
    prize_this: prize,
    earned_to_date: earned,
    timestamp: new Date().toISOString()
  });

  if(isCorrect){
    statusEl.textContent = `Correct! Youâ€™ve won $${prize.toLocaleString()} for this step.`;
    correct++;
    await sleep(650);
    qIndex++;
    if(qIndex >= DEFAULT_LADDER.length){ endGame(true); }
    else { renderQuestion(); }
  }else{
    statusEl.textContent = `Incorrect. You leave with $${earned.toLocaleString()}.`;
    wrong++;
    await sleep(900);
    endGame(false, earned);
  }
  correctEl.textContent = String(correct);
  wrongEl.textContent   = String(wrong);
}

function getSafePrize(){
  // if player crossed step 10 (index 9), guarantee 32000; else if crossed 5 (index 4), guarantee 1000; else 0
  if(qIndex >= 10) return DEFAULT_LADDER[9];
  if(qIndex >= 5)  return DEFAULT_LADDER[4];
  return 0;
}

function endGame(won=false, amount=0){
  const msg = won
    ? `ðŸŽ‰ YOU'RE A MILLION-BAND-AIRE! Final winnings: $${DEFAULT_LADDER.at(-1).toLocaleString()}`
    : `Game over. Final winnings: $${amount.toLocaleString()}`;
  qEl.textContent = msg;
  hintEl.textContent = 'Press Reset to play again.';
  statusEl.textContent = 'Thanks for playing!';
  [opts.A,opts.B,opts.C,opts.D].forEach(b=>b.disabled=true);
  renderLadder(won ? DEFAULT_LADDER.length-1 : qIndex);
}

/* ========= Lifelines ========= */
$('#ll5050').onclick = ()=>{
  if(used5050 || !currentMap) return;
  used5050 = true; $('#ll5050').classList.add('used');
  // hide two wrong answers (randomly chosen)
  const wrongIdxs = [0,1,2,3].filter(i => i !== currentMap.correctVisibleIndex);
  shuffleInPlace(wrongIdxs);
  const toHide = wrongIdxs.slice(0,2);
  [opts.A,opts.B,opts.C,opts.D].forEach((b, i)=>{
    if(toHide.includes(i)){ b.style.visibility = 'hidden'; }
  });
  statusEl.textContent = '50:50 used â€” two wrong answers removed.';
};

$('#llPoll').onclick = ()=>{
  if(usedPoll || !currentMap) return;
  usedPoll = true; $('#llPoll').classList.add('used');
  // generate audience poll (skewed to correct)
  const base = 50 + Math.floor(Math.random()*21); // 50â€“70% to correct
  let rest = 100 - base;
  let other = [0,0,0];
  for(let i=0;i<3;i++){
    const n = i<2 ? Math.floor(Math.random()*(rest+1)) : rest;
    other[i] = n; rest -= n;
  }
  shuffleInPlace(other);
  const arr = [0,0,0,0];
  arr[currentMap.correctVisibleIndex] = base;
  let oi=0;
  for(let i=0;i<4;i++) if(i!==currentMap.correctVisibleIndex) arr[i]=other[oi++];

  // render
  ['A','B','C','D'].forEach((letter, i)=>{
    bars[letter].style.width = `${arr[i]}%`;
    pcts[letter].textContent = `${arr[i]}%`;
  });
  pollBox.style.display='block';
  statusEl.textContent = 'Ask the Band used â€” results shown below.';
};

$('#llPhone').onclick = ()=>{
  if(usedPhone) return;
  usedPhone = true; $('#llPhone').classList.add('used');
  const q = questions[qIndex];
  const hint = q.hint || 'Maestro thinks carefullyâ€¦ consider musical basics and key signatures.';
  hintEl.textContent = `Maestro: "${hint}"`;
  statusEl.textContent = 'Phone the Maestro used.';
};

$('#llSkip').onclick = async ()=>{
  if(usedSkip) return;
  usedSkip = true; $('#llSkip').classList.add('used');
  statusEl.textContent = 'Question skipped â€” no penalty.';
  await sleep(400);
  qIndex++;
  if(qIndex >= DEFAULT_LADDER.length){ endGame(true); } else { renderQuestion(); }
};

/* ========= Button & Keyboard Wiring ========= */
opts.A.onclick = ()=>pick(0);
opts.B.onclick = ()=>pick(1);
opts.C.onclick = ()=>pick(2);
opts.D.onclick = ()=>pick(3);

window.addEventListener('keydown', e=>{
  const k = e.key.toLowerCase();
  if(k==='a') opts.A.click();
  if(k==='b') opts.B.click();
  if(k==='c') opts.C.click();
  if(k==='d') opts.D.click();
});

/* ========= Controls ========= */
$('#resetBtn').onclick = ()=> restart();
$('#fullscreenBtn').onclick=()=>{
  const el=document.documentElement; if(!document.fullscreenElement){el.requestFullscreen?.();} else {document.exitFullscreen?.();}
};
$('#downloadBtn').onclick=()=>{
  const now = new Date().toISOString().replaceAll(':','-');
  const sessionId = Math.random().toString(36).slice(2,8).toUpperCase();
  const summary = [
    ['session_id',sessionId],
    ['date',now],
    ['questions_in_bank',questions.length],
    ['answered',results.length],
    ['correct',correct],
    ['wrong',wrong],
    ['final_winnings', getSafePrizeAfterEnd()]
  ].map(r=>r.join(','));
  const headers = ['n','prompt','visible_A','visible_B','visible_C','visible_D','mapping_order','correct_original','picked_visible','picked_original','isRight','prize_this','earned_to_date','timestamp'];
  const rows = results.map(r => [
    r.n, r.prompt, r.visible_labels.A, r.visible_labels.B, r.visible_labels.C, r.visible_labels.D,
    r.mapping_order, r.correct_original, r.picked_visible, r.picked_original, r.isRight, r.prize_this, r.earned_to_date, r.timestamp
  ]);
  const esc=v=>String(v).includes(',')?`"${String(v).replaceAll('"','""')}"`:String(v);
  const csv=[...summary,'',headers.join(','),...rows.map(cols=>cols.map(esc).join(','))].join('\n');
  const url=URL.createObjectURL(new Blob([csv],{type:'text/csv'}));
  const a=Object.assign(document.createElement('a'),{href:url,download:`million_band_aire_6th_${sessionId}_${now}.csv`});
  document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
};
function getSafePrizeAfterEnd(){
  // compute based on furthest cleared index in results
  const maxCleared = results.reduce((m,r)=> r.isRight==='TRUE' ? Math.max(m, r.n) : m, 0);
  if(maxCleared >= 10) return DEFAULT_LADDER[9];
  if(maxCleared >= 5)  return DEFAULT_LADDER[4];
  return 0;
}

/* ========= Default Questions (15, increasing difficulty; some funny) ========= */
const defaultCSV = `
When entering the band room, what should you do first?, Say hello and get ready, Start a drum solo, Run laps, Eat your reed, A,,Be polite & prepare your space.
Which is a woodwind?, Clarinet, Tuba, Triangle, Cymbal, A,,Woodwinds often use reeds or air columns.
Which is a brass instrument?, Trumpet, Violin, Flute, Oboe, A,,Brass = lip buzz + metal tubing.
Which is a percussion instrument?, Snare drum, Trombone, Trumpet, Clarinet, A,,Percussion is struck/shaken/scraped.
Which has valves?, Trumpet, Trombone, Flute, Clarinet, A,1000,Valves change tubing length.
